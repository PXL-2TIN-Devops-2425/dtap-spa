pipeline {
    agent any
  
    stages {
        stage('Cleanup') {
            steps {
                sh 'rm -rf *'
            }
        }
        stage('Install Dependencies') {
            tools {
                nodejs 'testenvnode'
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Build Artifact') {
            steps {
                sh 'docker build -t martijnvb2003/calculator-app .'
            }
        }
        stage('Push Artifact') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-credentials', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push martijnvb2003/calculator-app'
                }
            }
        }
        stage('Deployment') {
            steps {
                sh '''
                docker stop calculator-app || true
                docker rm calculator-app || true
                docker run -d -p 3000:3000 --name calculator-app martijnvb2003/calculator-app
                '''
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
    }
}
